{
    "name": "tiny-idb",
    "version": "0.1.0",
    "description": "Minimal and easy to use wrapper for IndexedDB",
    "main": "dist/index.js",
    "umd:main": "dist/index.umd.js",
    "module": "dist/index.ems.js",
    "source": "src/index.ts",
    "types": "dist/index.d.ts",
    "scripts": {
      "build:dev": "microbundle -f umd --name TinyIDB -o devbuild --no-generateTypes",
      "build:dist": "microbundle -f cjs,umd,es --name TinyIDB --sourcemap false && npm run copytypes",
      "copytypes": "cpy 'dist/index.d.ts' . --rename='index.ems.d.ts' && cpy 'dist/index.d.ts' . --rename='index.umd.d.ts'",
      "dev": "microbundle watch -f umd --name TinyIDB"
    },
    "keywords": [
      "indexedDB",
      "wrapper",
      "minimalistic"
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/jjcapellan/tiny-idb"
    },
    "author": "Juan Jose Capellan",
    "license": "MIT",
    "devDependencies": {
      "cpy-cli": "^4.1.0",
      "microbundle": "^0.14.2"
    }
  }